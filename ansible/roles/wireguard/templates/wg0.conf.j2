[Interface]
PrivateKey = {{ wireguard_server_private_key }}
Address = {{ wireguard_server_address_cidr }}
ListenPort = {{ wireguard_listen_port }}
PostUp   = iptables -t nat -A POSTROUTING -s {{ wireguard_network }} -o eth0 -j MASQUERADE
PostDown = iptables -t nat -D POSTROUTING -s {{ wireguard_network }} -o eth0 -j MASQUERADE

# Household shared peer (single shared client)
[Peer]
PublicKey = {{ wireguard_household_public_key }}
AllowedIPs = {{ wireguard_household_address_cidr }}
PersistentKeepalive = 25
